@model Model.EF.Order

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Lý do hủy đơn hàng
    }

@using (Html.BeginForm("Delete","Order",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Đơn hàng hủy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdOrder)

        
        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" value="Xác nhận hủy" class="btn btn-primary" />
                <button type="reset" class="btn btn-dark">Hủy</button>
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-success">
        @Html.ActionLink("Trở về", "Index1")
    </button>
    
</div>
