@model Model.EF.Supplier

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Cập Nhật Thông Tin Nhà Cung Cấp
}

