@model List<Doan1.Models.CartItem>

<div style="margin-left:50px; ">

    @{ var sl = 0; }
    <span style="margin-top: -10px; position: absolute;text-align: center; background: #fff; color: blue; border-radius: 50%; margin-left: 22px; width: 14px;">
        @{
            var session = (Doan1.Common.AccountLogin)Session[Doan1.Common.CommonConstant.USER_SESSION];
        }
        @if (session != null)
        {

            if (Model.Count > 0)
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    sl = sl + Model[i].Quantity;

                }
                @sl;
            }

        }
        else
        {

        }

    </span>
    <img src="~/Images/giohang.png" style="height:30px;width:30px;" onclick="window.location.href = '@Url.Action("Index", "Cart")'" />
        

</div>
